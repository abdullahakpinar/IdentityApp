<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">User Test Web Site</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Member" asp-action="Index">Üye Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="Index">Admin Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Member" asp-action="Manager">Yönetici Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Member" asp-action="Editor">Editör Ana Sayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-primary btn-block" asp-controller="Member" asp-action="ExchangeRedirect">Ücretli</a>
                <a class="btn btn-primary btn-block" asp-controller="Member" asp-action="OnlySomeCity">Şehir</a>
                <a class="btn btn-danger btn-block" asp-controller="Member" asp-action="Violence">Yaş Sınırı</a>
                <a class="btn btn-info btn-block" asp-controller="Member" asp-action="ChangePassword">Şifre Değiştirme</a>
                <a class="btn btn-info btn-block" asp-controller="Member" asp-action="EditUser">Bilgi Güncelleme</a>
                <a class="btn btn-info btn-block" asp-controller="Member" asp-action="LogOut" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
            </div>
        </div>
         
    </div>
</body>
</html>
