@model IdentityApp.ViewModels.ResetUserPasswordByAdminViewModel

@{
    ViewData["Title"] = "ResetUserPassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Şifre Yenileme</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetUserPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" class="form-control" type="hidden" readonly />
            <div class="form-group">
                <label asp-for="PasswordNew" class="control-label"></label>
                <input asp-for="PasswordNew" class="form-control" />
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre Yenile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>