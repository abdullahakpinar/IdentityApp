@model List<UserApp>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
    </tr>
    @if (Model == null || Model.Count < 1)
    {
        <tr>
            <td colspan="3">Kullanıcı bulunmamaktadır.</td>
        </tr>
    }
    else 
    {
        @foreach (UserApp user in Model)
	    {
		 <tr>
             <td>@user.Id</td>
             <td>@user.UserName</td>
             <td>@user.Email</td>
         </tr>
	    }
    }
</table>
